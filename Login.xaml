<Window x:Class="InventoryManagement.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Liteboho Solutions" Height="350" Width="500">
    <Grid>
        
      
        <TextBlock Text="Welcome to Inventory Management" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,37,0,0" FontSize="16" FontWeight="Bold"/>

        <Label Content="Username:" HorizontalAlignment="Left" Margin="52,76,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="UsernameTextBox" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Width="200" Height="22"/>

        <Label Content="Password:" HorizontalAlignment="Left" Margin="51,117,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" Margin="0,120,0,0" VerticalAlignment="Top" Width="200" Height="23"/>

        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Center" Margin="0,180,0,0" VerticalAlignment="Top" Width="100" Click="LoginButton_Click" Height="29" Background="#FF69F50C"/>
    </Grid>
</Window>

<Window x:Class="InventoryManagement.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Item Information" Height="326" Width="442">
    <Grid>
        
        <StackPanel Margin="10">
            <TextBlock Text="Module Code:"/>
            <TextBox Name="ModuleCodeTextBox"/>

            <TextBlock Text="Module Name:"/>
            <TextBox Name="ModuleNameTextBox"/>

            <TextBlock Text="Number of Credits:"/>
            <TextBox Name="NumberOfCreditsTextBox"/>

            <TextBlock Text="Class Hours per Week:"/>
            <TextBox Name="ClassHoursTextBox"/>
            <Button Content="Save" Width="90" Height="27" Click="SaveButton_Click" Background="#FF69F50C"/>
        </StackPanel>
    </Grid>
</Window>
